@{
    ViewData["Title"] = "معلمون المدرسة";
}

    <link rel="stylesheet" href="~/css/Supervisor/teachersPage.css" />


<div class="layout">

    <!-- المحتوى -->
    <main class="content">
        <div class="box">

            <h2 class="page-title">معلمو المدرسة :</h2>

            <table>
                <thead>
                    <tr>
                        <th>اسم المعلم/ة</th>
                        <th>المادة</th>
                    </tr>
                </thead>
                <tbody id="teachersTable">
                    <tr><td>محمد أحمد السيد</td><td>الرياضيات</td></tr>
                    <tr><td>فاطمة محمود حسن</td><td>الرياضيات</td></tr>
                    <tr><td>خالد السيد محمد</td><td>الرياضيات</td></tr>
                    <tr><td>مازن محمد عبدالرحمن</td><td>الرياضيات</td></tr>
                    <tr><td>روان محمد ياسر</td><td>العلوم</td></tr>
                </tbody>
            </table>

            <!-- زرار إضافة معلم -->
            <button type="button" class="btn confirm" onclick="openModal()">
                إضافة معلم
            </button>

        </div>
    </main>

    <!-- القائمة الجانبية -->
    <aside class="sidebar">

        <div class="admin">
            <img src="~/images/supervisorImage.jpg" />
            <h4>
                <a asp-controller="Supervisor" asp-action="SupervisorProfile">
                    أحمد علي
                </a>
            </h4>
        </div>

        <nav>
            <a asp-controller="Supervisor" asp-action="StudentPage">الطلاب</a>
            <a asp-controller="Supervisor" asp-action="TeachersPage" class="active">المعلمون</a>
            <a asp-controller="Supervisor" asp-action="StudentsTable">جدول الطلاب</a>
            <a asp-controller="Supervisor" asp-action="TeachersTable">جدول المعلمين</a>
            <a asp-controller="Supervisor" asp-action="TeacherPerformance">أداء المعلم</a>
            <a asp-controller="Supervisor" asp-action="TeachersAbsence">الغياب للمعلمين</a>
            <a asp-controller="Supervisor" asp-action="StudentsAbsence">الغياب للطلاب</a>
            <a asp-controller="Supervisor" asp-action="Notes">الملاحظات</a>
            <a asp-controller="Supervisor" asp-action="EditProfile">تعديل البيانات</a>
        </nav>

        <a asp-controller="Account" asp-action="Logout" class="logout">تسجيل الخروج</a>

    </aside>
</div>

<!-- Modal إضافة معلم -->
<div id="addTeacherModal" class="modal">
    <div class="modal-content">
        <h3>إضافة معلم</h3>

        <input id="teacherName" type="text" placeholder="اسم المعلم" />
        <input id="teacherSubject" type="text" placeholder="المادة" />

        <div class="modal-actions">
            <button type="button" class="btn confirm" onclick="addTeacher()">حفظ</button>
            <button type="button" class="btn cancel" onclick="closeModal()">إلغاء</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Supervisor/teachersPage.js"></script>
}
