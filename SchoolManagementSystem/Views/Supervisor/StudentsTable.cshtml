@{
    ViewData["Title"] = "جدول الطلاب";
}

<link rel="stylesheet" href="~/css/Supervisor/studentsTable.css" />

<div class="layout">

    <!-- المحتوى -->
    <main class="content">
        <div class="box">

            <!-- اختيارات -->
            <div class="selectors">
                <div class="select-group">
                    <label>اختيار المرحلة :</label>
                    <select>
                        <option>رياض أطفال</option>
                        <option>المرحلة الابتدائية</option>
                        <option>المرحلة الإعدادية</option>
                        <option>المرحلة الثانوية</option>
                    </select>
                </div>

                <div class="select-group">
                    <label>اختيار الصف :</label>
                    <select>
                        <option>الصف الأول</option>
                        <option>الصف الثاني</option>
                        <option>الصف الثالث</option>
                        <option>الصف الرابع</option>
                        <option>الصف الخامس</option>
                        <option>الصف السادس</option>
                    </select>
                </div>
            </div>

            <!-- صورة الجدول -->
            <div class="table-image">
                <img src="~/images/studentsTable.png" alt="جدول الطلاب">
            </div>

        </div>
    </main>

    <!-- القائمة الجانبية -->
    <aside class="sidebar">

        <div class="admin">
            <img src="~/images/supervisorImage.jpg" />
            <h4>
                <a asp-controller="Supervisor" asp-action="SupervisorProfile">
                    أحمد علي
                </a>
            </h4>
        </div>

        <nav>
            <a asp-controller="Supervisor" asp-action="StudentPage">الطلاب</a>
            <a asp-controller="Supervisor" asp-action="TeachersPage">المعلمون</a>

            <a asp-controller="Supervisor"
               asp-action="StudentsTable"
               class="active">
                جدول الطلاب
            </a>

            <a asp-controller="Supervisor" asp-action="TeachersTable">
                جدول المعلمين
            </a>

            <a asp-controller="Supervisor" asp-action="TeacherPerformance">
                أداء المعلم
            </a>

            <a asp-controller="Supervisor" asp-action="TeachersAbsence">
                الغياب للمعلمين
            </a>

            <a asp-controller="Supervisor" asp-action="StudentsAbsence">
                الغياب للطلاب
            </a>

            <a asp-controller="Supervisor" asp-action="Notes">
                الملاحظات
            </a>

            <a asp-controller="Supervisor" asp-action="EditProfile">
                تعديل البيانات
            </a>
        </nav>

        <button class="logout"
                onclick="location.href='@Url.Action("Index","Home")'">
            تسجيل الخروج
        </button>

    </aside>

</div>
