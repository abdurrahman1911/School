			   <li>
				   <a asp-controller="Teacher" asp-action="Students">الطلاب</a>
			   </li>
			   <li>
				   <a asp-controller="Teacher" asp-action="Schedule">الجدول الدراسي</a>
			   </li>
			   <li>
				   <a asp-controller="Teacher" asp-action="Grades" >الدرجات</a>
			   </li>
			   <li>
				   <a asp-controller="Teacher" asp-action="Attendance">الحضور</a>
			   </li>
