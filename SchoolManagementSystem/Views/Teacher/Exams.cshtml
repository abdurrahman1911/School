               asp-action="Index"
               class="logout">
				تسجيل الخروج
			</a>
		</nav>
	

    <!-- phone menu button-->
    <button class="menu-toggle" id="menuToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- main content-->
    <div class="main-content" id="mainContent">
        <div class="page active" id="exams">
            <div class="header">
                <h1><i class="fas fa-file-alt"></i> إدارة الاختبارات</h1>
                <div class="header-actions">
                    <button class="btn add-exam-btn" id="addExamBtn">
                        <i class="fas fa-plus"></i> إضافة اختبار جديد
                    </button>
                </div>
            </div>

            <!-- filters section-->
            <div class="filter-section">
                <div class="filter-row">
                    <div class="filter-group">
                        <label for="examLevelFilter"><i class="fas fa-graduation-cap"></i> المرحلة:</label>
                        <select id="examLevelFilter" class="filter-select">
                            <option value="all">جميع المراحل</option>
                            <option value="primary">المرحلة الابتدائية</option>
                            <option value="preparatory">المرحلة المتوسطة</option>
                            <option value="secondary">المرحلة الثانوية</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="examClassFilter"><i class="fas fa-users"></i> الصف:</label>
                        <select id="examClassFilter" class="filter-select">
                            <option value="all">جميع الصفوف</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="examSubjectFilter"><i class="fas fa-book"></i> المادة:</label>
                        <select id="examSubjectFilter" class="filter-select">
                            <option value="all">جميع المواد</option>
                            <option value="math">الرياضيات</option>
                            <option value="arabic">اللغة العربية</option>
                            <option value="english">اللغة الإنجليزية</option>
                            <option value="science">العلوم</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="examTypeFilter"><i class="fas fa-filter"></i> نوع الاختبار:</label>
                        <select id="examTypeFilter" class="filter-select">
                            <option value="all">جميع الأنواع</option>
                            <option value="quiz">اختبار قصير</option>
                            <option value="midterm">منتصف الفصل</option>
                            <option value="final">نهائي</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="examStatusFilter"><i class="fas fa-info-circle"></i> الحالة:</label>
                        <select id="examStatusFilter" class="filter-select">
                            <option value="all">جميع الحالات</option>
                            <option value="upcoming">قادم</option>
                            <option value="ongoing">جاري</option>
                            <option value="completed">منتهي</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <button class="btn" id="applyExamFilter">
                            <i class="fas fa-filter"></i> تطبيق الفلتر
                        </button>
                        <button class="btn btn-cancel" id="clearExamFilter">
                            <i class="fas fa-times"></i> إعادة تعيين
                        </button>
                    </div>
                </div>
            </div>

            <!--test statistics-->
            <div class="attendance-stats">
                <div class="stat-card">
                    <div class="stat-icon" style="background-color: var(--primary-color);">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="totalExamsCount">0</h3>
                        <p>إجمالي الاختبارات</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon present">
                        <i class="fas fa-running"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="ongoingExamsCount">0</h3>
                        <p>اختبارات جارية</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon excused">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="completedExamsCount">0</h3>
                        <p>اختبارات منتهية</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon late">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="stat-info">
                        <h3 id="gradedExamsCount">0</h3>
                        <p>اختبارات مصححة</p>
                    </div>
                </div>
            </div>

            <!-- list of tests-->
            <div class="table-container">
                <h2 id="examsTitle">قائمة الاختبارات</h2>
                
                <table class="data-table exams-table">
                    <thead>
                        <tr>
                            <th>اسم الاختبار</th>
                            <th>المادة</th>
                            <th>نوع الاختبار</th>
                            <th>التاريخ</th>
                            <th>الوقت</th>
                            <th>المدة</th>
                            <th>الأسئلة</th>
                            <th>الدرجة</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody id="examsTableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="modals-container"></div>

       <script src="~/js/Teacher/data.js"></script>
  <script src="~/js/Teacher/exams.js"></script>
</body>
</html>