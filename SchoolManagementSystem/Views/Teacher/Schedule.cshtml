@{
    ViewData["Title"] = "الجدول الدراسي";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Teacher/schedule.css"/>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body>
    <!-- Side navigation bar -->
    <nav class="sidebar">
        <div class="logo">
            <div class="user-info">
                <div class="user-avatar">أ</div>
                <span>المعلم: يوسف</span>     
            </div>
        </div>
        
        <!-- Navigation links -->
      <ul class="nav-links">
            <li><a asp-controller="Teacher" asp-action="Teacherdashboard">الصفحة الرئيسية</a></li>
            <li><a asp-controller="Teacher" asp-action="Main">الملاحظات والتنبيهات</a></li>
            <li><a asp-controller="Teacher" asp-action="Students">الطلاب</a></li>
            <li><a asp-controller="Teacher" asp-action="Schedule"class="active">الجدول الدراسي</a></li>
            <li><a asp-controller="Teacher" asp-action="Grades">الدرجات</a></li>
            <li><a asp-controller="Teacher" asp-action="Attendance">الحضور</a></li>
            <li><a asp-controller="Teacher" asp-action="Assignments">الواجبات</a></li>
            <li><a asp-controller="Teacher" asp-action="Exams">الاختبارات</a></li>
            <li><a asp-controller="Teacher" asp-action="Setting">تعديل البيانات</a></li>
            <li><a asp-controller="Teacher" asp-action="Logout">تسجيل الخروج</a></li>
        </ul>
    </nav>

    <!-- Mobile menu button -->
    <input type="checkbox" id="menuToggle" class="menu-toggle-checkbox">
    <label for="menuToggle" class="menu-toggle">
        <i class="fas fa-bars"></i>
    </label>

    <!-- Main content -->
    <div class="main-content">
        <div class="page">
            <div class="header">
                <h1><i class="fas fa-calendar-alt"></i> الجدول الدراسي الأسبوعي</h1>
            </div>

            <!-- Schedule image -->
            <div class="schedule-image-container">
                <div class="image-wrapper">
                    <!-- Default image -->
                    <img src="~/images/teachertable.png" alt="الجدول الدراسي" class="schedule-image"/>
                </div>
            </div>
        </div>
    </div>
</body>
</html>