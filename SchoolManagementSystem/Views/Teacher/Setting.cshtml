@{
    ViewData["Title"] = "تعديل البيانات";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>

<link rel="stylesheet" href="~/css/Teacher/setting.css"/>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    

</head>
<body>
    <!-- Mobile menu button -->
    <input type="checkbox" id="mobileMenu" class="mobile-menu-checkbox">
    <label for="mobileMenu" class="menu-toggle" id="menuToggle">
        <i class="fas fa-bars"></i>
    </label>

    <!-- Side navigation bar -->
    <nav class="sidebar" id="sidebar">
        <div class="logo">
            <div class="user-info">
                <div class="user-avatar">أ</div>
                <span>المعلم: يوسف</span>     
            </div>
        </div>
        
        <!-- Navigation links -->
         <ul class="nav-links">
            <li><a asp-controller="Teacher" asp-action="Teacherdashboard">الصفحة الرئيسية</a></li>
            <li><a asp-controller="Teacher" asp-action="Main">الملاحظات والتنبيهات</a></li>
            <li><a asp-controller="Teacher" asp-action="Students">الطلاب</a></li>
            <li><a asp-controller="Teacher" asp-action="Schedule">الجدول الدراسي</a></li>
            <li><a asp-controller="Teacher" asp-action="Grades">الدرجات</a></li>
            <li><a asp-controller="Teacher" asp-action="Attendance">الحضور</a></li>
            <li><a asp-controller="Teacher" asp-action="Assignments">الواجبات</a></li>
            <li><a asp-controller="Teacher" asp-action="Exams">الاختبارات</a></li>
            <li><a asp-controller="Teacher" asp-action="Setting" class="active">تعديل البيانات</a></li>
            <li><a asp-controller="Teacher" asp-action="Logout">تسجيل الخروج</a></li>
        </ul>
    </nav>

    <!-- Main content -->
    <div class="main-content" id="mainContent">
        <div class="page active" id="settings">
            <div class="header">
                <h1><i class="fas fa-cog"></i> تعديل البيانات الشخصية</h1>
            </div>

            <!-- Password change form -->
            <div class="settings-container">
                <h2> تغيير كلمة المرور</h2>
                
                <div class="password-form">
                    <div class="form-group">
                        <label for="currentPassword">كلمة المرور الحالية:</label>
                        <input type="password" id="currentPassword" placeholder="أدخل كلمة المرور الحالية">
                    </div>
                    
                    <div class="form-group">
                        <label for="newPassword">كلمة المرور الجديدة:</label>
                        <input type="password" id="newPassword" placeholder="أدخل كلمة المرور الجديدة">
                    </div>
                    
                    <div class="form-group">
                        <label for="confirmPassword">تأكيد كلمة المرور:</label>
                        <input type="password" id="confirmPassword" placeholder="أكد كلمة المرور الجديدة">
                    </div>
                    
                    <button class="btn save-btn" tabindex="0">
                        <i class="fas fa-save"></i> حفظ التغييرات
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
