@{
    ViewData["Title"] = "تعديل البيانات";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>تعديل البيانات</title>
<link rel="stylesheet" href="~/css/Teacher/setting.css"/></head>
<body>
    <!-- Side navigation bar -->
     <aside class="sidebar">
    
            
        
        <div class="logo">
            <div class="user-info">
                <div class="user-avatar">أ</div>
                <span>المعلم: يوسف</span>     
            </div>
        </div>
            
        
        <!-- Navigation links -->
         <ul class="nav-links">
            <li><a asp-controller="Teacher" asp-action="Teacherdashboard">الصفحة الرئيسية</a></li>
            <li><a asp-controller="Teacher" asp-action="Main">الملاحظات والتنبيهات</a></li>
            <li><a asp-controller="Teacher" asp-action="Students">الطلاب</a></li>
            <li><a asp-controller="Teacher" asp-action="Schedule">الجدول الدراسي</a></li>
            <li><a asp-controller="Teacher" asp-action="Grades">الدرجات</a></li>
            <li><a asp-controller="Teacher" asp-action="Attendance">الحضور</a></li>
            <li><a asp-controller="Teacher" asp-action="Assignments">الواجبات</a></li>
            <li><a asp-controller="Teacher" asp-action="Exams">الاختبارات</a></li>
            <li><a asp-controller="Teacher" asp-action="Setting" class="active">تعديل البيانات</a></li>
        </ul>
             <a asp-controller="Home"
               asp-action="About"
               class="logout">
                تسجيل الخروج
            </a>
        </aside>
    
     <main class="content">
        <div class="box">

            <h3 class="title">تعديل كلمة المرور</h3>

            <form>
                <div class="form-group">
                    <label>كلمة المرور الحالية</label>
                    <div class="password-field">
                        <input type="password" id="currentPassword" placeholder="ادخل كلمة المرور الحالية">
                        <span class="toggle" onclick="togglePassword('currentPassword', this)">
                            <i class="fa-solid fa-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>كلمة المرور الجديدة</label>
                    <div class="password-field">
                        <input type="password" id="newPassword" placeholder="ادخل كلمة المرور الجديدة">
                        <span class="toggle" onclick="togglePassword('newPassword', this)">
                            <i class="fa-solid fa-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>تأكيد كلمة المرور</label>
                    <div class="password-field">
                        <input type="password" id="confirmPassword" placeholder="اعد كتابة كلمة المرور الجديدة">
                        <span class="toggle" onclick="togglePassword('confirmPassword', this)">
                            <i class="fa-solid fa-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <button type="submit" class="save-btn">حفظ التعديلات</button>
            </form>

        </div>
    </main>

    <script src="~/js/Teacher/edit-data.js"></script>

</body>
</html>