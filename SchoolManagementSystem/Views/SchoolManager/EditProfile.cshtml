
@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/SchoolManager/sidebar-layout.css" />

    <link rel="stylesheet" href="~/css/SchoolManager/editProfile.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>

    <div class="layout">

        <aside class="sidebar">
            <div class="profile">
                <img src="~/images/schoolManagerImage.jpg" class="manager-img">
                <h4>
                    <a asp-controller="SchoolManager" asp-action="SchoolManagerProfile">
                        أحمد علي
                    </a>
                </h4>
            </div>

            <ul class="menu">
                <li><a asp-controller="SchoolManager" asp-action="Home">الصفحة الرئيسية</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Students">الطلاب</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Teachers">المعلمين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Supervisors">المشرفين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="SuccessFailure">النجاح والرسوب</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Attendance">الغياب والحضور</a></li>
                <li class="active"><a asp-controller="SchoolManager" asp-action="EditProfile">تعديل البيانات</a></li>
            </ul>

            <a asp-controller="Home" asp-action="About" class="logout">تسجيل الخروج</a>
        </aside>

        <main class="content">
            <div class="box">

                <h3 class="title">تعديل كلمة المرور</h3>

                <form asp-action="EditProfile" method="post">

                    <div class="form-group">
                        <label>كلمة المرور الحالية</label>
                        <div class="password-field">
                            <input type="password" id="currentPassword" name="CurrentPassword" placeholder="ادخل كلمة المرور الحالية" />
                            <span class="toggle" onclick="togglePassword('currentPassword', this)">
                                <i class="fa-solid fa-eye-slash"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>كلمة المرور الجديدة</label>
                        <div class="password-field">
                            <input type="password" id="newPassword" name="NewPassword" placeholder="ادخل كلمة المرور الجديدة" />
                            <span class="toggle" onclick="togglePassword('newPassword', this)">
                                <i class="fa-solid fa-eye-slash"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>تأكيد كلمة المرور</label>
                        <div class="password-field">
                            <input type="password" id="confirmPassword" name="ConfirmPassword" placeholder="اعد كتابة كلمة المرور الجديدة" />
                            <span class="toggle" onclick="togglePassword('confirmPassword', this)">
                                <i class="fa-solid fa-eye-slash"></i>
                            </span>
                        </div>
                    </div>

                    <button type="submit" class="save-btn">حفظ التعديلات</button>

                </form>

            </div>
        </main>

    </div>

    <script src="@Url.Content("~/js/SchoolManager/editProfile.js")" defer></script>
    <script>
        function togglePassword(inputId, toggleSpan) {
            const input = document.getElementById(inputId);
            const icon = toggleSpan.querySelector("i");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            }
        }
    </script>
</body>
</html>








