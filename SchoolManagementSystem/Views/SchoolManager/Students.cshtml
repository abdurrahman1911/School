
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["بيانات الطالب"]</title>

    <link rel="stylesheet" href="~/css/SchoolManager/sidebar-layout.css" />

    <link rel="stylesheet" href="~/css/SchoolManager/students.css" />
</head>
<body>

    <div class="layout">

        <aside class="sidebar">
            <div class="profile">
                <img src="~/images/schoolManagerImage.jpg" class="manager-img">
                <h4>
                    <a asp-controller="SchoolManager"
                       asp-action="SchoolManagerProfile">
                        أحمد علي
                    </a>
                </h4>
            </div>

            <ul class="menu">
                <li><a asp-controller="SchoolManager" asp-action="Home">الصفحة الرئيسية</a></li>
                <li class="active"><a asp-controller="SchoolManager" asp-action="Students">الطلاب</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Teachers">المعلمين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Supervisors">المشرفين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="SuccessFailure">النجاح والرسوب</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Attendance">الغياب والحضور</a></li>
                <li><a asp-controller="SchoolManager" asp-action="EditProfile">تعديل البيانات</a></li>
            </ul>

            <a asp-controller="Home"
               asp-action="About"
               class="logout">
                تسجيل الخروج
            </a>
        </aside>

        <main class="content">
            <div class="profile-card">

                <!-- ===== Filters Bar ===== -->
                <section class="box filters-bar">
                    <div class="filter-item">
                        <span class="filter-label">اختيار المرحلة:</span>
                        <select>
                            <option>المرحلة الابتدائية</option>
                            <option>المرحلة الإعدادية</option>
                            <option>المرحلة الثانوية</option>
                        </select>
                    </div>

                    <div class="filter-item">
                        <span class="filter-label">اختيار الصف:</span>
                        <select>
                            <option>الصف السادس</option>
                            <option>الصف الخامس</option>
                            <option>الصف الرابع</option>
                        </select>
                    </div>

                    <div class="filter-item numbers">
                        <select>
                            <option>1</option>
                            <option>2</option>
                        </select>
                        <span class="slash">/</span>
                        <select>
                            <option>6</option>
                        </select>
                    </div>
                </section>

                <!-- ===== Students List ===== -->
                <section class="box">
                    <h2 class="section-title">اسم الطلبة</h2>
                    <ul class="students-list">
                        <li>محمد أحمد السيد</li>
                        <li>فاطمة محمود حسن</li>
                        <li>خالد السيد محمد</li>
                        <li>مازن محمد عبدالعظيم</li>
                        <li>روان محمد ياسر</li>
                        <li>فيروز أحمد محمد</li>
                        <li>آمنة محمد عبدالله</li>
                        <li>فريدة أحمد صالح</li>
                        <li>محمد محمود عبدالرحيم</li>
                        <li>صالح عبدالله محمد</li>
                    </ul>
                </section>

                <!-- ===== Schedule Image ===== -->
                <section class="box">
                    <h2 class="section-title">الجدول الدراسي</h2>
                    <img src="../images/studentsTable.png" class="full-img" alt="الجدول الدراسي">
                </section>

            </div>

            <div class="profile-card">

                <h2 class="grades-title">درجات الطلاب</h2>

                <section class="box filters-bar">
                    <div class="filter-item">
                        <span>اختيار المرحلة:</span>
                        <select><option>المرحلة الابتدائية</option></select>
                    </div>
                    <div class="filter-item">
                        <span>اختيار الصف:</span>
                        <select><option>الصف السادس</option></select>
                    </div>
                    <div class="filter-item numbers">
                        <select><option>1</option></select>
                        <span>/</span>
                        <select><option>6</option></select>
                    </div>
                    <div class="filter-item">
                        <span>اختيار الطالب:</span>
                        <select><option>محمد أحمد السيد</option></select>
                    </div>
                    <div class="filter-item">
                        <span>اختيار المادة:</span>
                        <select>
                            <option>العلوم</option>
                            <option>اللغة العربية</option>
                        </select>
                    </div>
                    <div class="filter-item">
                        <select><option>اختبارات منتصف الفصل الدراسي الأول</option></select>
                    </div>
                </section>

                <section class="box">
                    <table class="grades-table">
                        <thead>
                            <tr>
                                <th>اسم الطالب/ة</th>
                                <th>الدرجة</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr><td>محمد أحمد السيد</td><td>29 / 30</td></tr>
                            <tr><td>فاطمة محمود حسن</td><td>28 / 30</td></tr>
                            <tr><td>خالد السيد محمد</td><td>28 / 30</td></tr>
                            <tr><td>مازن محمد عبدالعظيم</td><td>30 / 30</td></tr>
                            <tr><td>روان محمد ياسر</td><td>29 / 30</td></tr>
                            <tr><td>فيروز أحمد محمد</td><td>27 / 30</td></tr>
                            <tr><td>آمنة محمد عبدالله</td><td>29 / 30</td></tr>
                            <tr><td>فريدة أحمد صالح</td><td>29 / 30</td></tr>
                            <tr><td>محمد محمود عبدالرحيم</td><td>29 / 30</td></tr>
                            <tr><td>صالح عبدالله محمد</td><td>30 / 30</td></tr>
                        </tbody>
                    </table>
                </section>

                <section class="box">
                    <h2 class="section-title">نسبة الحضور والغياب</h2>
                    <canvas id="attendanceChart"></canvas>
                </section>

            </div>
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="@Url.Content("~/js/SchoolManager/students.js")" defer></script>

</body>
</html>
