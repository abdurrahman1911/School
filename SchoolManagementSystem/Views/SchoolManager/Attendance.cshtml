@{
    ViewData["Title"] = "الغياب والحضور";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/SchoolManager/attendance.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <div class="layout">

        <!-- القائمة الجانبية -->
        <aside class="sidebar">
            <div class="profile">
                <img src="~/images/schoolManagerImage.jpg" alt="مدير المدرسة" class="manager-img">
                <h4>
                    <a asp-controller="SchoolManager" asp-action="SchoolManagerProfile">أحمد علي</a>
                </h4>
            </div>

            <ul class="menu">
                <li><a asp-controller="SchoolManager" asp-action="Home">الصفحة الرئيسية</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Students">الطلاب</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Teachers">المعلمين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Supervisors">المشرفين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="SuccessFailure">النجاح والرسوب</a></li>
                <li class="active"><a asp-controller="SchoolManager" asp-action="Attendance">الغياب والحضور</a></li>
                <li><a asp-controller="SchoolManager" asp-action="EditProfile">تعديل البيانات</a></li>
            </ul>

            <div class="logout-container">
                <button class="logout" onclick="location.href='@Url.Action("Home","SchoolManager")'">تسجيل الخروج</button>
            </div>
        </aside>

        <!-- المحتوى -->
        <main class="content">

            <div class="top-bar">
                <h2>@ViewData["Title"]</h2>

                <div class="filters">
                    <select id="stageSelect">
                        <option value="kg">رياض الأطفال</option>
                        <option value="primary" selected>المرحلة الابتدائية</option>
                        <option value="prep">المرحلة الإعدادية</option>
                        <option value="secondary">المرحلة الثانوية</option>
                    </select>

                    <select id="periodSelect">
                        <option value="month" selected>هذا الشهر</option>
                        <option value="year">هذا العام</option>
                    </select>
                </div>
            </div>

            <div class="chart-card">
                <canvas id="attendanceChart"></canvas>
            </div>

        </main>

    </div>

    @section Scripts {
        <script src="~/js/SchoolManager/attendance.js"></script>
    }
</body>
</html>
