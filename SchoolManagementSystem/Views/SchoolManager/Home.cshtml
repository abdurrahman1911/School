
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/SchoolManager/sidebar-layout.css" />

    <link rel="stylesheet" href="~/css/SchoolManager/home.css" />
</head>
<body>

    <div class="layout">

        <aside class="sidebar">
            <div class="profile">
                <img src="~/images/schoolManagerImage.jpg" class="manager-img">
                <h4>
                    <a asp-controller="SchoolManager"
                       asp-action="SchoolManagerProfile">
                        أحمد علي
                    </a>
                </h4>
            </div>

            <ul class="menu">
                <li class="active"><a asp-controller="SchoolManager" asp-action="Home">الصفحة الرئيسية</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Students">الطلاب</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Teachers">المعلمين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Supervisors">المشرفين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="SuccessFailure">النجاح والرسوب</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Attendance">الغياب والحضور</a></li>
                <li><a asp-controller="SchoolManager" asp-action="EditProfile">تعديل البيانات</a></li>
            </ul>

            <a asp-controller="Account" asp-action="Logout" class="logout">تسجيل الخروج</a>

        </aside>

        <main class="content">

            <div class="stats">
                <div class="stat-card">
                    <span class="number">42</span>
                    <span class="label">المعلمين</span>
                </div>
                <div class="stat-card">
                    <span class="number">30</span>
                    <span class="label">المشرفين</span>
                </div>
                <div class="stat-card">
                    <span class="number">325</span>
                    <span class="label">الطلاب</span>
                </div>
            </div>

            <section class="chart-section">
                <div class="section-header">
                    <h3>أداء المشرفين</h3>
                    <select class="chart-select">
                        <option>This Week</option>
                        <option>This Month</option>
                    </select>
                </div>
                <div class="chart" id="supervisorsChart"></div>
            </section>

            <section class="chart-section">
                <div class="section-header">
                    <h3>أداء المعلمين</h3>
                    <select class="chart-select">
                        <option>This Week</option>
                        <option>This Month</option>
                    </select>
                </div>
                <div class="chart" id="teachersChart"></div>
            </section>

            <section class="chart-section">
                <div class="section-header">
                    <h3>أداء الطلاب</h3>
                    <select class="chart-select">
                        <option>This Week</option>
                        <option>This Month</option>
                    </select>
                </div>
                <div class="chart" id="studentsChart"></div>
            </section>
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="@Url.Content("~/js/SchoolManager/home.js")" defer></script>

</body>
</html>