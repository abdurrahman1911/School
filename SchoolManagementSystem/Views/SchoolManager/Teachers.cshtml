

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["المعلمين"]</title>

    <link rel="stylesheet" href="~/css/SchoolManager/sidebar-layout.css" />

    <link rel="stylesheet" href="~/css/SchoolManager/teachers.css" />
</head>
<body>

    <div class="layout">

        <aside class="sidebar">
            <div class="profile">
                <img src="~/images/schoolManagerImage.jpg" class="manager-img">
                <h4>
                    <a asp-controller="SchoolManager"
                       asp-action="SchoolManagerProfile">
                        أحمد علي
                    </a>
                </h4>
            </div>

            <ul class="menu">
                <li ><a asp-controller="SchoolManager" asp-action="Home">الصفحة الرئيسية</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Students">الطلاب</a></li>
                <li class="active"><a asp-controller="SchoolManager" asp-action="Teachers">المعلمين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Supervisors">المشرفين</a></li>
                <li><a asp-controller="SchoolManager" asp-action="SuccessFailure">النجاح والرسوب</a></li>
                <li><a asp-controller="SchoolManager" asp-action="Attendance">الغياب والحضور</a></li>
                <li><a asp-controller="SchoolManager" asp-action="EditProfile">تعديل البيانات</a></li>
            </ul>

            <a asp-controller="Home"
               asp-action="About"
               class="logout">
                تسجيل الخروج
            </a>
        </aside>

        <main class="content">
            <div class="profile-card">

                <section class="box">
                    <h2 class="section-title">المعلمون</h2>
                    <ul class="teachers-list">
                        <li>محمد أحمد السيد</li>
                        <li>فاطمة محمود حسن</li>
                        <li>خالد السيد محمد</li>
                    </ul>
                </section>

                <section class="box performance-box">
                    <h2 class="section-title">الأداء الأسبوعي</h2>
                    <canvas id="performanceChart"></canvas>

                    <h2 class="section-title notes-title">الملاحظات</h2>
                    <textarea class="notes"></textarea>
                </section>

            </div>
        </main>

    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="@Url.Content("~/js/SchoolManager/teachers.js")" defer></script>

</body>
</html>
