


@{
    ViewData["Title"] = "تعديل البيانات";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>تعديل البيانات</title>
    <link rel="stylesheet" href="~/css/Admin/edit-data.css"/>

 

</head>
<body>
    <!-- Side navigation bar -->
  <aside class="sidebar">    
        <div class="logo">
            <div class="user-info">
                <div class="user-avatar">ص</div>
                <span>صالح الشمري</span>
            </div>
        </div>
        
        <!-- Navigation links -->
          <ul class="nav-links">
    <li><a asp-controller="Admin" asp-action="Dashboard" >الصفحة الرئيسية</a></li>
    <li><a asp-controller="Admin" asp-action="Successandfailure">النجاح والرسوب</a></li>
    <li><a asp-controller="Admin" asp-action="Attendance">الحضور والغياب</a></li>
    <li><a asp-controller="Admin" asp-action="Student">الطلاب</a></li>
    <li><a asp-controller="Admin" asp-action="Teachers">المعلمين</a></li>
    <li><a asp-controller="Admin" asp-action="Supervisors">المشرفين</a></li>
    <li><a asp-controller="Admin" asp-action="Addadmin" >اضافة مدير</a></li>
    <li><a asp-controller="Admin" asp-action="Editdata" class="active">تعديل البيانات</a></li>
</ul>
<a asp-controller="Home"
               asp-action="Index"
               class="logout">
                تسجيل الخروج
            </a>
        </aside>

    <!-- Main content -->

   
     <main class="content">
        <div class="box">

            <h3 class="title">تعديل كلمة المرور</h3>

            <form>
                <div class="form-group">
                    <label>كلمة المرور الحالية</label>
                    <div class="password-field">
                        <input type="password" id="currentPassword" placeholder="ادخل كلمة المرور الحالية">
                        <span class="toggle" onclick="togglePassword('currentPassword', this)">
                            <i class="fa-solid fa-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>كلمة المرور الجديدة</label>
                    <div class="password-field">
                        <input type="password" id="newPassword" placeholder="ادخل كلمة المرور الجديدة">
                        <span class="toggle" onclick="togglePassword('newPassword', this)">
                            <i class="fa-solid fa-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>تأكيد كلمة المرور</label>
                    <div class="password-field">
                        <input type="password" id="confirmPassword" placeholder="اعد كتابة كلمة المرور الجديدة">
                        <span class="toggle" onclick="togglePassword('confirmPassword', this)">
                            <i class="fa-solid fa-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <button type="submit" class="save-btn">حفظ التعديلات</button>
            </form>

        </div>
    </main>
    <script src="~/js/Admin/edit-data.js"></script>
</body>
</html>