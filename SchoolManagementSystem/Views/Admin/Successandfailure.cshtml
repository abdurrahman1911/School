
@{
    ViewData["Title"] = "النجاح والرسوب";
}



<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>النجاح والرسوب</title>
    <link rel="stylesheet" href="~/css/Admin/success.css"/>

     <style>
    /* ========== Layout ========== */
.layout {
    display: flex;
    height: 100vh;
}

/* ========== Sidebar ========== */
.sidebar {
    width: 230px;
    background: #4387AB;
    color: #fff;
    position: fixed;
    right: 0;
    top: 0;
    bottom: 0;
    padding: 20px 15px;
    display: flex;
    flex-direction: column;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 10px;
    justify-content: center;
}

.sidebar .logo {
    padding: 25px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    text-align: center;
}

.user-avatar {
    width: 45px;
    height: 45px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: bold;
    border: 2px solid rgba(255, 255, 255, 0.3);
}

.user-info span {
    font-size: 16px;
    font-weight: 600;
}

.profile {
    text-align: center;
    margin-bottom: 25px;
}

.manager-img {
    width: 75px;
    height: 75px;
    border-radius: 50%;
    border: 3px solid #fff;
    margin-bottom: 10px;
}

.profile h4 a {
    color: #fff;
    text-decoration: none;
    font-size: 18px;
}

/* ========== Menu ========== */
.nav-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 14px;
    flex: 1;
}

  .nav-links li a {
        display: block;
        padding: 12px;
        background: #2a719d;
        color: #fff;
        text-align: center;
        border-radius: 6px;
        text-decoration: none;
        transition: 0.3s;
    }

.nav-link.active {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    border-right-color: white;
    font-weight: 600;
}        .nav-links a:hover {
            background: #0d3f56;
            font-weight: bold;
        }

        .nav-link.logout {
    color: #ffffff;
    margin-top: 175px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 15px;
}

/* ========== Logout ========== */
.logout {
    margin-top: auto;
    padding: 12px;
    background: #2a719d;
    color: #fff;
    text-align: center;
    border-radius: 6px;
    text-decoration: none;
    cursor: pointer;
}

    .logout:hover {
        background: #0d3f56;
    }


    </style>


</head>
<body>
    <!-- Sidebar navigation -->
  <aside class="sidebar">    
        <div class="logo">
            <div class="user-info">
                <div class="user-avatar">ص</div>
                 <span>صالح الشمري</span>     
            </div>
        </div>
        
         <ul class="nav-links">
    <li><a asp-controller="Admin" asp-action="Dashboard" >الصفحة الرئيسية</a></li>
    <li><a asp-controller="Admin" asp-action="Successandfailure" class="active">النجاح والرسوب</a></li>
    <li><a asp-controller="Admin" asp-action="Attendance">الحضور والغياب</a></li>
    <li><a asp-controller="Admin" asp-action="Student">الطلاب</a></li>
    <li><a asp-controller="Admin" asp-action="Teachers">المعلمين</a></li>
    <li><a asp-controller="Admin" asp-action="Supervisors">المشرفين</a></li>
    <li><a asp-controller="Admin" asp-action="Addadmin" >اضافة مدير</a></li>
    <li><a asp-controller="Admin" asp-action="Editdata">تعديل البيانات</a></li>
</ul>
<a asp-controller="Home"
               asp-action="Index"
               class="logout">
                تسجيل الخروج
            </a>
        </aside>
    <!-- Main content -->
    <main class="main-content">
        <header class="content-header">
            <h1>النجاح والرسوب</h1>
            <div class="header-info">
            </div>
        </header>

        <div class="content-body">
            <div class="filters-section">
                <div class="filter-group">
                    <label for="stageSelect">اختيار المرحلة:</label>
                    <select id="stageSelect">
                        <option value="primary" selected>المرحلة الإبتدائية</option>
                        <option value="middle">المرحلة المتوسطة</option>
                        <option value="secondary">المرحلة الثانوية</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label for="monthSelect">اختيار الشهر:</label>
                    <select id="monthSelect">
                        <option value="january">يناير</option>
                        <option value="february">فبراير</option>
                        <option value="march">مارس</option>
                        <option value="april">أبريل</option>
                        <option value="may">مايو</option>
                        <option value="june">يونيو</option>
                        <option value="july">يوليو</option>
                        <option value="august">أغسطس</option>
                        <option value="september">سبتمبر</option>
                        <option value="october" selected>أكتوبر</option>
                        <option value="november">نوفمبر</option>
                        <option value="december">ديسمبر</option>
                    </select>
                </div>
            </div>

            <div class="section-title">
                <h2 id="currentStage">المرحلة الإبتدائية</h2>
            </div>

            <!-- Grades list - top -->
            <div class="grades-list">
                <div class="grade-row" id="gradesList">
                    <!-- Will be filled with data -->
                </div>
            </div>

            <!-- Chart section - bottom -->
            <div class="chart-container">
                <div id="successChart"></div>
            </div>
        </div>
    </main>

    <script src="~/js/Admin/success.js"></script>
</body>
</html>
