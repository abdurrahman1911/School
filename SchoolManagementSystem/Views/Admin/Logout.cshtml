@{
    ViewData["Title"] = "تسجبل الخروج";
}


<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>تسجيل الخروج</title>
    <link rel="stylesheet" href="~/css/Admin/logout.css"/>
    
      <style>
    .nav-links {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .nav-links {
    list-style: none;
}

.nav-links li {
    margin: 5px 0;
}

.nav-links a {
    display: flex !important;
    align-items: center !important;
    padding: 15px 20px !important;
    color: white !important;
    text-decoration: none !important;
    transition: var(--transition) !important;
    border-right: 4px solid transparent !important;
}

.nav-links a:hover,
.nav-links a.active {
    background-color: rgba(255, 255, 255, 0.1) !important;
    border-right-color: white !important;
}

.nav-links i {
    margin-left: 10px !important;
    width: 25px !important;
    text-align: center !important;
}
    .nav-links a.logout:hover {
        background-color: rgba(255, 0, 0, 0.15);
        border-right-color: red;
    }
    </style>

</head>
<body>
    <nav class="sidebar">
        <div class="logo">
            <div class="user-info">
                <div class="user-avatar">ص</div>
                <span>صالح الشمري</span>
            </div>
        </div>
        
      <ul class="nav-links">
    <li><a asp-controller="Admin" asp-action="Dashboard" >الصفحة الرئيسية</a></li>
    <li><a asp-controller="Admin" asp-action="Successandfailure">النجاح والرسوب</a></li>
    <li><a asp-controller="Admin" asp-action="Attendance">الحضور والغياب</a></li>
    <li><a asp-controller="Admin" asp-action="Student">الطلاب</a></li>
    <li><a asp-controller="Admin" asp-action="Teachers">المعلمين</a></li>
    <li><a asp-controller="Admin" asp-action="Supervisors">المشرفين</a></li>
    <li><a asp-controller="Admin" asp-action="Addadmin" >اضافة مدير</a></li>
    <li><a asp-controller="Admin" asp-action="Editdata">تعديل البيانات</a></li>
    <li><a asp-controller="Admin" asp-action="Logout" class="active">تسجيل الخروج</a></li>
</ul>
    </nav>

    <main class="main-content">
        <header class="content-header">
            <h1>تسجيل الخروج</h1>
            <div class="header-info">
            </div>
        </header>

        <div class="content-body">
            <div class="logout-container">
                <div class="logout-message">
                    <div class="logout-icon">
                        <i class="fas fa-sign-out-alt"></i>
                    </div>
                    
                    
                    
            
                    
                    <div class="logout-actions">
                        <a href="login.html" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt"></i> نعم، تسجيل الخروج
                        </a>
                        <a href="success.html" class="btn btn-cancel">
                            <i class="fas fa-times"></i> إلغاء والعودة
                        </a>
                    </div>
                    
                 
                </div>
            </div>
        </div>
    </main>

   
</body>
</html>