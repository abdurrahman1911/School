@{
    ViewData["Title"] = "قائمة المعلمين";
}


<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>قائمة المعلمين</title>
    <link rel="stylesheet" href="~/css/Admin/teachers.css"/>

   

</head>
<body>
  <aside class="sidebar">    
        <div class="logo">
            <div class="user-info">
                <div class="user-avatar">ص</div>
                  <span>صالح الشمري</span>    
            </div>
        </div>
        
    <ul class="nav-links">
    <li><a asp-controller="Admin" asp-action="Dashboard" >الصفحة الرئيسية</a></li>
    <li><a asp-controller="Admin" asp-action="Successandfailure">النجاح والرسوب</a></li>
    <li><a asp-controller="Admin" asp-action="Attendance">الحضور والغياب</a></li>
    <li><a asp-controller="Admin" asp-action="Student">الطلاب</a></li>
    <li><a asp-controller="Admin" asp-action="Teachers" class="active">المعلمين</a></li>
    <li><a asp-controller="Admin" asp-action="Supervisors">المشرفين</a></li>
    <li><a asp-controller="Admin" asp-action="Addadmin" >اضافة مدير</a></li>
    <li><a asp-controller="Admin" asp-action="Editdata">تعديل البيانات</a></li>
</ul>
<a asp-controller="Home"
               asp-action="Index"
               class="logout">
                تسجيل الخروج
            </a>
        </aside>
    <main class="main-content">
        <header class="content-header">
            <h1>قائمة المعلمين</h1>
            <div class="header-info">
            </div>
        </header>

        <div class="content-body">
            <div class="table-section">
                <table id="teachersTable">
                    <thead>
                        <tr>
                            <th>اسم المعلم/ة</th>
                            <th>الحضور</th>
                            <th>الأداء</th>
                            <th>التقييم</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody id="teachersTableBody">
                    </tbody>
                </table>
            </div>
            
<!-- Teacher Feedback Section -->
            <div class="teacher-notes-section">
                <h2 class="section-title">ملاحظات على المعلمين</h2>
                
                <div class="notes-form">
                    <div class="form-group">
                        <label for="teacherSelect">اختر المعلم:</label>
                        <select id="teacherSelect" class="form-select">
                            <option value="">-- اختر معلم --</option>
                            <option value="teacher1">محمد أحمد</option>
                            <option value="teacher2">سارة محمد</option>
                            <option value="teacher3">علي خالد</option>
                            <option value="teacher4">فاطمة عمر</option>
                        </select>
                    </div>
                    
                   
                    
                    
                    <div class="form-group">
                        <label for="noteContent">نص الملاحظة:</label>
                        <textarea id="noteContent" class="form-textarea" rows="4" placeholder="اكتب ملاحظاتك هنا..."></textarea>
                    </div>
                    
                    
                    
                    <button type="button" class="btn save-note-btn">
                        <i class="icon-save"></i> ارسال الملاحظة
                    </button>
                </div>
                
                
            </div>
        </div>
    </main>


    <script src="~/js/Admin/teachers.js"></script>
</body>
</html>