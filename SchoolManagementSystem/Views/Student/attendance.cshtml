@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>الحضور والغياب - محمود محمد</title>
    <meta name="description" content="سجل الحضور والغياب - بوابة الطالب الإلكترونية">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Student/student_styles.css" asp-append-version="true">
</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="logo">
                <div class="user-info">
                    <div class="user-avatar">م</div>
                    <span>محمود محمد</span>
                </div>
            </div>
            <ul class="nav-links">
                <li><a asp-controller="Student" asp-action="Index">الصفحة الرئيسية</a></li>
                <li><a asp-controller="Student" asp-action="Schedule">الجدول الدراسي</a></li>
                <li><a asp-controller="Student" asp-action="Grades">الدرجات</a></li>
                <li><a asp-controller="Student" asp-action="Attendance" class="active">الحضور والغياب</a></li>
                <li><a asp-controller="Student" asp-action="Tests">الاختبارات</a></li>
                <li><a asp-controller="Student" asp-action="Level">المستوى</a></li>
                <li><a asp-controller="Student" asp-action="Assignments">الواجبات</a></li>
                <li><a asp-controller="Student" asp-action="Edit">تعديل البيانات</a></li>
            </ul>
            <a asp-controller="Account" asp-action="Logout" class="logout">تسجيل الخروج</a>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Attendance Section -->
            <section class="attendance-section">
                <h2 class="attendance-title">الحضور :</h2>

                <!-- Attendance Table -->
                <div class="attendance-table-wrapper">
                    <table class="attendance-table">
                        <thead>
                            <tr>
                                <th>اليوم</th>
                                <th>التاريخ</th>
                                <th>الحضور</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>الأحد</td>
                                <td>15-10-2025</td>
                                <td class="status-cell">
                                    <span class="status-icon present">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="3">
                                            <polyline points="20 6 9 17 4 12"></polyline>
                                        </svg>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>الاثنين</td>
                                <td>16-10-2025</td>
                                <td class="status-cell">
                                    <span class="status-icon present">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="3">
                                            <polyline points="20 6 9 17 4 12"></polyline>
                                        </svg>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>الثلاثاء</td>
                                <td>17-10-2025</td>
                                <td class="status-cell">
                                    <span class="status-icon present">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="3">
                                            <polyline points="20 6 9 17 4 12"></polyline>
                                        </svg>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>الأربعاء</td>
                                <td>18-10-2025</td>
                                <td class="status-cell">
                                    <span class="status-icon present">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="3">
                                            <polyline points="20 6 9 17 4 12"></polyline>
                                        </svg>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td>الخميس</td>
                                <td>19-10-2025</td>
                                <td class="status-cell">
                                    <span class="status-icon absent">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="3">
                                            <line x1="18" y1="6" x2="6" y2="18"></line>
                                            <line x1="6" y1="6" x2="18" y2="18"></line>
                                        </svg>
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>

    <script src="~/js/Student/student_script.js"></script>
</body>

</html>