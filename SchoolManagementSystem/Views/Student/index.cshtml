@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>بوابة الطالب - محمود محمد</title>
    <meta name="description" content="بوابة الطالب الإلكترونية - نظام إدارة الطلاب">
    <!-- Used fonts and icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Student/student_styles.css" asp-append-version="true">
</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="logo">
                <div class="user-info">
                    <div class="user-avatar">م</div>
                    <span>محمود محمد</span>
                </div>
            </div>
            <ul class="nav-links">
                <li><a asp-controller="Student" asp-action="Index" class="active">الصفحة الرئيسية</a></li>
                <li><a asp-controller="Student" asp-action="Schedule">الجدول الدراسي</a></li>
                <li><a asp-controller="Student" asp-action="Grades">الدرجات</a></li>
                <li><a asp-controller="Student" asp-action="Attendance">الحضور والغياب</a></li>
                <li><a asp-controller="Student" asp-action="Tests">الاختبارات</a></li>
                <li><a asp-controller="Student" asp-action="Level">المستوى</a></li>
                <li><a asp-controller="Student" asp-action="Assignments">الواجبات</a></li>
                <li><a asp-controller="Student" asp-action="Edit">تعديل البيانات</a></li>
            </ul>
            <a asp-controller="Account" asp-action="Logout" class="logout">تسجيل الخروج</a>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Profile Section -->
            <section class="profile-section">
                <div class="profile-info">
                    <h1 class="student-name">محمود محمد</h1>
                    <p class="student-grade">الصف: 11</p>
                    <p class="student-id">رقم الجلوس: 123456</p>
                    <p class="student-phone">رقم الهاتف: 0123456789</p>
                </div>
                <div class="profile-image">
                    <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=200&h=200&fit=crop&crop=face"
                        alt="صورة الطالب">
                </div>
            </section>

            <!-- Schedule Section -->
            <section class="schedule-section">
                <h2 class="schedule-title">جدول اليوم :</h2>
                <table class="schedule-table">
                    <thead>
                        <tr>
                            <th>الماده</th>
                            <th>الوقت</th>
                            <th>المعلم</th>
                            <th>القاعه</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>اللغة العربية</td>
                            <td>9:45 - 9:00</td>
                            <td>أ/ محمود عبد الله</td>
                            <td>A1</td>
                        </tr>
                        <tr>
                            <td>الرياضيات</td>
                            <td>10:45 - 10:00</td>
                            <td>أ/ علي محمد</td>
                            <td>B2</td>
                        </tr>
                        <tr>
                            <td>الفيزياء</td>
                            <td>11:45 - 11:00</td>
                            <td>أ/ نسرين احمد</td>
                            <td>C3</td>
                        </tr>
                        <tr>
                            <td>اللغة الانجليزية</td>
                            <td>12:45 - 12:00</td>
                            <td>أ/ ساره علي</td>
                            <td>B1</td>
                        </tr>
                        <tr>
                            <td>الاحياء</td>
                            <td>1:45 - 1:00</td>
                            <td>أ/ خالد سمير</td>
                            <td>A2</td>
                        </tr>
                        <tr>
                            <td>الكيمياء</td>
                            <td>2:45 - 2:00</td>
                            <td>أ/ منى حسن</td>
                            <td>A3</td>
                        </tr>
                    </tbody>
                </table>
            </section>
        </main>
    </div>

    <script src="~/js/Student/student_script.js"></script>
</body>

</html>