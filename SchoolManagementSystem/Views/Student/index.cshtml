@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>بوابة الطالب - محمود محمد</title>
    <meta name="description" content="بوابة الطالب الإلكترونية - نظام إدارة الطلاب">
    <!-- Used fonts and icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/Student/student_styles.css")">
</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="user-info">
                <!-- The user avatar + name -->
                <div class="user-avatar-small">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="1.5">
                        <circle cx="12" cy="8" r="4" />
                        <path d="M4 20c0-4 4-6 8-6s8 2 8 6" />
                    </svg>
                </div>
                <span class="user-name">محمود محمد</span>

            </div>
            <!-- The navbar -->
            <nav class="nav-menu">
                <a asp-controller="Student" asp-action="Index" class="nav-item active">الصفحة الرئيسية</a>
                <a asp-controller="Student" asp-action="Schedule" class="nav-item">الجدول الدراسي</a>
                <a asp-controller="Student" asp-action="Grades" class="nav-item">الدرجات</a>
                <a asp-controller="Student" asp-action="Attendance" class="nav-item">الحضور والغياب</a>
                <a asp-controller="Student" asp-action="Tests" class="nav-item">الاختبارات</a>
                <a asp-controller="Student" asp-action="Level" class="nav-item">المستوى</a>
                <a asp-controller="Student" asp-action="Assignments" class="nav-item">الواجبات</a>
                <a asp-controller="Student" asp-action="Edit" class="nav-item">تعديل البيانات</a>
            </nav>
            <button class="logout-btn">تسجيل الخروج</button>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Profile Section -->
            <section class="profile-section">
                <div class="profile-info">
                    <h1 class="student-name">محمود محمد</h1>
                    <p class="student-grade">الصف: 11</p>
                    <p class="student-id">رقم الجلوس: 123456</p>
                    <p class="student-phone">رقم الهاتف: 0123456789</p>
                </div>
                <div class="profile-image">
                    <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=200&h=200&fit=crop&crop=face"
                        alt="صورة الطالب">
                </div>
            </section>

            <!-- Schedule Section -->
            <section class="schedule-section">
                <h2 class="schedule-title">جدول اليوم :</h2>
                <table class="schedule-table">
                    <thead>
                        <tr>
                            <th>الماده</th>
                            <th>الوقت</th>
                            <th>المعلم</th>
                            <th>القاعه</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>اللغة العربية</td>
                            <td>9:45 - 9:00</td>
                            <td>أ/ محمود عبد الله</td>
                            <td>A1</td>
                        </tr>
                        <tr>
                            <td>الرياضيات</td>
                            <td>10:45 - 10:00</td>
                            <td>أ/ علي محمد</td>
                            <td>B2</td>
                        </tr>
                        <tr>
                            <td>الفيزياء</td>
                            <td>11:45 - 11:00</td>
                            <td>أ/ نسرين احمد</td>
                            <td>C3</td>
                        </tr>
                        <tr>
                            <td>اللغة الانجليزية</td>
                            <td>12:45 - 12:00</td>
                            <td>أ/ ساره علي</td>
                            <td>B1</td>
                        </tr>
                        <tr>
                            <td>الاحياء</td>
                            <td>1:45 - 1:00</td>
                            <td>أ/ خالد سمير</td>
                            <td>A2</td>
                        </tr>
                        <tr>
                            <td>الكيمياء</td>
                            <td>2:45 - 2:00</td>
                            <td>أ/ منى حسن</td>
                            <td>A3</td>
                        </tr>
                    </tbody>
                </table>
            </section>
        </main>
    </div>

    <script src="~/js/Student/student_script.js"></script>
</body>

</html>