@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>الجدول الدراسي - محمود محمد</title>
    <meta name="description" content="الجدول الدراسي الأسبوعي - بوابة الطالب الإلكترونية">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/Student/student_styles.css")">
</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="user-info">
                <div class="user-avatar-small">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="1.5">
                        <circle cx="12" cy="8" r="4" />
                        <path d="M4 20c0-4 4-6 8-6s8 2 8 6" />
                    </svg>
                </div>
                <span class="user-name">محمود محمد</span>

            </div>
            <nav class="nav-menu">
                <a asp-controller="Student" asp-action="Index" class="nav-item">الصفحة الرئيسية</a>
                <a asp-controller="Student" asp-action="Schedule" class="nav-item active">الجدول الدراسي</a>
                <a asp-controller="Student" asp-action="Grades" class="nav-item">الدرجات</a>
                <a asp-controller="Student" asp-action="Attendance" class="nav-item">الحضور والغياب</a>
                <a asp-controller="Student" asp-action="Tests" class="nav-item">الاختبارات</a>
                <a asp-controller="Student" asp-action="Level" class="nav-item">المستوى</a>
                <a asp-controller="Student" asp-action="Assignments" class="nav-item">الواجبات</a>
                <a asp-controller="Student" asp-action="Edit" class="nav-item">تعديل البيانات</a>
            </nav>
            <button class="logout-btn">تسجيل الخروج</button>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Weekly Schedule Section -->
            <section class="schedule-section">
                <h2 class="schedule-title">الجدول الدراسي :</h2>
                <div class="weekly-schedule-wrapper">
                    <table class="weekly-schedule-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>7:10 - 7:55</th>
                                <th>8:00 - 8:45</th>
                                <th>8:50 - 9:35</th>
                                <th>9:35 - 10:00</th>
                                <th>10:05 - 10:50</th>
                                <th>10:55 - 11:40</th>
                                <th>11:45 - 12:30</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="day-cell">الأحد</td>
                                <td>علوم</td>
                                <td>اللغة العربية</td>
                                <td>الرياضيات</td>
                                <td class="break-cell">استراحة</td>
                                <td>اللغة الإنجليزية</td>
                                <td>تربية دينية</td>
                                <td>دراسات اجتماعية</td>
                            </tr>
                            <tr>
                                <td class="day-cell">الأثنين</td>
                                <td>اللغة العربية</td>
                                <td>دراسات اجتماعية</td>
                                <td>اللغة الإنجليزية</td>
                                <td class="break-cell">استراحة</td>
                                <td>حاسب آلي</td>
                                <td>علوم</td>
                                <td>الرياضيات</td>
                            </tr>
                            <tr>
                                <td class="day-cell">الثلاثاء</td>
                                <td>الرياضيات</td>
                                <td>اللغة العربية</td>
                                <td>علوم</td>
                                <td class="break-cell">استراحة</td>
                                <td>اللغة العربية</td>
                                <td>دراسات اجتماعية</td>
                                <td>علوم</td>
                            </tr>
                            <tr>
                                <td class="day-cell">الأربعاء</td>
                                <td>دراسات اجتماعية</td>
                                <td>الرياضيات</td>
                                <td>اللغة العربية</td>
                                <td class="break-cell">استراحة</td>
                                <td>تربية دينية</td>
                                <td>اللغة الإنجليزية</td>
                                <td>اللغة الإنجليزية</td>
                            </tr>
                            <tr>
                                <td class="day-cell">الخميس</td>
                                <td>اللغة الإنجليزية</td>
                                <td>اللغة العربية</td>
                                <td>دراسات اجتماعية</td>
                                <td class="break-cell">استراحة</td>
                                <td>الرياضيات</td>
                                <td>علوم</td>
                                <td>اللغة العربية</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>

    <script src="~/js/Student/student_script.js"></script>
</body>

</html>