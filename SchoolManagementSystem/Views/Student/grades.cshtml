@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>الدرجات - محمود محمد</title>
    <meta name="description" content="درجات الطالب - بوابة الطالب الإلكترونية">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Student/student_styles.css" asp-append-version="true">
</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="logo">
                <div class="user-info">
                    <div class="user-avatar">م</div>
                    <span>محمود محمد</span>
                </div>
            </div>
            <ul class="nav-links">
                <li><a asp-controller="Student" asp-action="Index">الصفحة الرئيسية</a></li>
                <li><a asp-controller="Student" asp-action="Schedule">الجدول الدراسي</a></li>
                <li><a asp-controller="Student" asp-action="Grades" class="active">الدرجات</a></li>
                <li><a asp-controller="Student" asp-action="Attendance">الحضور والغياب</a></li>
                <li><a asp-controller="Student" asp-action="Tests">الاختبارات</a></li>
                <li><a asp-controller="Student" asp-action="Level">المستوى</a></li>
                <li><a asp-controller="Student" asp-action="Assignments">الواجبات</a></li>
                <li><a asp-controller="Student" asp-action="Edit">تعديل البيانات</a></li>
            </ul>
            <a asp-controller="Account" asp-action="Logout" class="logout">تسجيل الخروج</a>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Grades Section -->
            <section class="grades-section">
                <h2 class="grades-title">درجات الطالب/ة :</h2>

                <!-- Level Selector -->
                <div class="level-selector-wrapper">
                    <select id="levelSelector" class="level-selector">
                        <option value="midterm1" selected>اختبارات منتصف الفصل الدراسي الأول</option>
                        <option value="final1">اختبارات نهاية الفصل الدراسي الأول</option>
                        <option value="midterm2">اختبارات منتصف الفصل الدراسي الثاني</option>
                        <option value="final2">اختبارات نهاية الفصل الدراسي الثاني</option>
                    </select>
                    <svg class="selector-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </div>

                <!-- Result Card -->
                <div class="result-card">
                    <h3 class="result-label">النتيجة</h3>
                    <p class="result-value passed">ناجح</p>
                </div>

                <!-- Grades Table -->
              <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>المادة</th>
                            <th>أعمال السنة</th>
                            <th>اختبار نصف الفصل</th>
                            <th>اختبار نهاية الفصل</th>
                            <th>المجموع</th>
                            <th>التقدير</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>الرياضيات</td>
                            <td>28/30</td>
                            <td>18/20</td>
                            <td>45/50</td>
                            <td>91/100</td>
                            <td><span class="status-badge present">ممتاز</span></td>
                        </tr>
                        <tr>
                            <td>اللغة العربية</td>
                            <td>27/30</td>
                            <td>17/20</td>
                            <td>43/50</td>
                            <td>87/100</td>
                            <td><span class="status-badge present">جيد جداً</span></td>
                        </tr>
                        <tr>
                            <td>اللغة الإنجليزية</td>
                            <td>29/30</td>
                            <td>19/20</td>
                            <td>47/50</td>
                            <td>95/100</td>
                            <td><span class="status-badge present">ممتاز</span></td>
                        </tr>
                        <tr>
                            <td>الفيزياء</td>
                            <td>25/30</td>
                            <td>16/20</td>
                            <td>40/50</td>
                            <td>81/100</td>
                            <td><span class="status-badge late">جيد</span></td>
                        </tr>
                        <tr>
                            <td>الكيمياء</td>
                            <td>26/30</td>
                            <td>18/20</td>
                            <td>44/50</td>
                            <td>88/100</td>
                            <td><span class="status-badge present">جيد جداً</span></td>
                        </tr>
                        <tr>
                            <td>الأحياء</td>
                            <td>28/30</td>
                            <td>19/20</td>
                            <td>46/50</td>
                            <td>93/100</td>
                            <td><span class="status-badge present">ممتاز</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            </section>
        </main>
    </div>

    <script src="~/js/Student/student_script.js"></script>
</body>

</html>