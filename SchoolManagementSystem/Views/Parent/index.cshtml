@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>بوابة ولي الأمر - محمد أحمد</title>
    <meta name="description" content="بوابة ولي الأمر الإلكترونية - نظام إدارة المدرسة">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Parent/parent_styles.css" asp-append-version="true">
</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="logo">
                <div class="user-info">
                    <div class="user-avatar">م</div>
                    <span>محمد أحمد</span>
                </div>
            </div>
            <ul class="nav-links">
                <li><a asp-controller="Parent" asp-action="Index" class="active">الصفحة الرئيسية</a></li>
                <li><a asp-controller="Parent" asp-action="Performance">أداء الطلاب</a></li>
                <li><a asp-controller="Parent" asp-action="Schedule">الجدول الدراسي</a></li>
                <li><a asp-controller="Parent" asp-action="Grades">الدرجات</a></li>
                <li><a asp-controller="Parent" asp-action="Attendance">الحضور</a></li>
                <li><a asp-controller="Parent" asp-action="Assignments">الواجبات</a></li>
                <li><a asp-controller="Parent" asp-action="Edit">تعديل البيانات</a></li>
            </ul>
            <a asp-controller="Account" asp-action="Logout" class="logout">تسجيل الخروج</a>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Parent Header -->
            <div class="parent-header">
                <h1 class="parent-title">ولي الأمر الأستاذ : <span class="parent-name">محمد أحمد خالد</span></h1>
            </div>

            <!-- Children Cards Section -->
            <section class="children-section">
                <div class="children-grid">
                    <!-- Child 1-->
                    <div class="child-card" onclick="selectChildLocal('salma')">
                        <div class="child-image">
                            <img src="https://images.unsplash.com/photo-1580489944761-15a19d654956?w=150&h=150&fit=crop&crop=face"
                                alt="سلمى محمد">
                        </div>
                        <div class="child-info">
                            <h3 class="child-name">سلمى محمد</h3>
                            <p class="child-grade">الصف السادس</p>
                        </div>
                    </div>

                    <!-- Child 2-->
                    <div class="child-card" onclick="selectChildLocal('ahmed')">
                        <div class="child-image">
                            <img src="https://images.unsplash.com/photo-1540479859555-17af45c78602?w=150&h=150&fit=crop&crop=face"
                                alt="أحمد محمد">
                        </div>
                        <div class="child-info">
                            <h3 class="child-name">أحمد محمد</h3>
                            <p class="child-grade">الصف التاسع</p>
                        </div>
                    </div>

                    <!-- Child 3-->
                    <div class="child-card" onclick="selectChildLocal('mahmoud')">
                        <div class="child-image">
                            <img src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=150&h=150&fit=crop&crop=face"
                                alt="محمود محمد">
                        </div>
                        <div class="child-info">
                            <h3 class="child-name">محمود محمد</h3>
                            <p class="child-grade">الصف الحادي عشر</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Contact Bar -->
            <div class="contact-bar">
                <div class="contact-info">
                    <span class="contact-label">للتواصل مع المعلم :</span>
                    <div class="student-select-wrapper">
                        <select id="teacher-select" class="student-select" onchange="updateTeacherPhone()">
                            <option value="0123456789">أ/ أحمد محمود - الرياضيات</option>
                            <option value="0112345678">أ/ سارة علي - اللغة العربية</option>
                            <option value="0109876543">أ/ محمد حسن - العلوم</option>
                            <option value="0156789012">أ/ فاطمة خالد - اللغة الإنجليزية</option>
                            <option value="0198765432">أ/ عمر يوسف - الدراسات الاجتماعية</option>
                            <option value="0134567890">أ/ نورا إبراهيم - التربية الدينية</option>
                        </select>
                    </div>
                </div>
                <div class="phone-info">
                    <span class="phone-label">رقم الهاتف :</span>
                    <span class="phone-number" id="teacher-phone">0123456789</span>
                </div>
            </div>
        </main>
    </div>

    <script src="~/js/Parent/parent_script.js"></script>
    <script>
        // Teachers data per child
        var teachersByChild = {
            'salma': [
                { name: 'أ/ أحمد محمود', subject: 'الرياضيات', phone: '0123456789' },
                { name: 'أ/ سارة علي', subject: 'اللغة العربية', phone: '0112345678' },
                { name: 'أ/ محمد حسن', subject: 'العلوم', phone: '0109876543' },
                { name: 'أ/ فاطمة خالد', subject: 'اللغة الإنجليزية', phone: '0156789012' },
                { name: 'أ/ نورا إبراهيم', subject: 'التربية الدينية', phone: '0134567890' },
                { name: 'أ/ عمر يوسف', subject: 'الدراسات الاجتماعية', phone: '0198765432' }
            ],
            'ahmed': [
                { name: 'أ/ خالد عبدالله', subject: 'الرياضيات', phone: '0101234567' },
                { name: 'أ/ هدى محمود', subject: 'اللغة العربية', phone: '0111234567' },
                { name: 'أ/ ياسر حسين', subject: 'الفيزياء', phone: '0121234567' },
                { name: 'أ/ منى سعيد', subject: 'الكيمياء', phone: '0151234567' },
                { name: 'أ/ طارق رمضان', subject: 'اللغة الإنجليزية', phone: '0191234567' },
                { name: 'أ/ أمل عادل', subject: 'الأحياء', phone: '0131234567' }
            ],
            'mahmoud': [
                { name: 'أ/ حسام الدين', subject: 'الرياضيات', phone: '0104567890' },
                { name: 'أ/ ريم أحمد', subject: 'اللغة العربية', phone: '0114567890' },
                { name: 'أ/ وليد سامي', subject: 'الفيزياء', phone: '0124567890' },
                { name: 'أ/ سمية كمال', subject: 'الكيمياء', phone: '0154567890' },
                { name: 'أ/ مصطفى نبيل', subject: 'اللغة الإنجليزية', phone: '0194567890' },
                { name: 'أ/ داليا حسن', subject: 'الأحياء', phone: '0134567891' }
            ]
        };

        // Update teacher dropdown based on selected child
        function updateTeachersList() {
            var savedChild = localStorage.getItem('selectedChild') || 'salma';
            var teachers = teachersByChild[savedChild] || teachersByChild['salma'];
            var select = document.getElementById('teacher-select');
            var phoneSpan = document.getElementById('teacher-phone');

            if (!select || !phoneSpan) return;

            // Clear and repopulate
            select.innerHTML = '';
            teachers.forEach(function (t) {
                var opt = document.createElement('option');
                opt.value = t.phone;
                opt.textContent = t.name + ' - ' + t.subject;
                select.appendChild(opt);
            });

            // Set phone to first teacher
            phoneSpan.textContent = teachers[0].phone;
        }

        // Update phone number when teacher is selected
        function updateTeacherPhone() {
            var select = document.getElementById('teacher-select');
            var phoneSpan = document.getElementById('teacher-phone');
            phoneSpan.textContent = select.value;
        }

        // Override for Index page card logic
        function selectChildLocal(childId) {
            localStorage.setItem('selectedChild', childId);
            syncUIWithSelection();
            updateTeachersList();
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function () {
            updateTeachersList();
        });
    </script>
</body>

</html>