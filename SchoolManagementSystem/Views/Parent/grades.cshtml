                        </tr>
                        <tr>
                            <td>الكيمياء</td>
                            <td>26/30</td>
                            <td>18/20</td>
                            <td>44/50</td>
                            <td>88/100</td>
                            <td><span class="status-badge present">جيد جداً</span></td>
                        </tr>
                        <tr>
                            <td>الأحياء</td>
                            <td>28/30</td>
                            <td>19/20</td>
                            <td>46/50</td>
                            <td>93/100</td>
                            <td><span class="status-badge present">ممتاز</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <script src="~/js/Parent/parent_script.js"></script>
</body>

</html>