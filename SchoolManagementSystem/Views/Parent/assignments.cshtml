@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>الواجبات - بوابة ولي الأمر</title>
    <meta name="description" content="واجبات الطلاب - بوابة ولي الأمر الإلكترونية">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/Parent/parent_styles.css")">
</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="user-info">
                <div class="user-avatar-small">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="1.5">
                        <circle cx="12" cy="8" r="4" />
                        <path d="M4 20c0-4 4-6 8-6s8 2 8 6" />
                    </svg>
                </div>
                <span class="user-name">محمد أحمد</span>
            </div>
            <nav class="nav-menu">
                <a asp-controller="Parent" asp-action="Index" class="nav-item">الصفحة الرئيسية</a>
                <a asp-controller="Parent" asp-action="Performance" class="nav-item">أداء الطلاب</a>
                <a asp-controller="Parent" asp-action="Schedule" class="nav-item">الجدول الدراسي</a>
                <a asp-controller="Parent" asp-action="Grades" class="nav-item">الدرجات</a>
                <a asp-controller="Parent" asp-action="Attendance" class="nav-item">الحضور</a>
                <a asp-controller="Parent" asp-action="Assignments" class="nav-item active">الواجبات</a>
                <a asp-controller="Parent" asp-action="Edit" class="nav-item">تعديل البيانات</a>
            </nav>
            <a href="@Url.Action("Index", "Home")" class="logout-btn">
                تسجيل الخروج
            </a>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">الواجبات</h1>
                <div class="child-selector">
                    <label class="child-selector-label">اختر الطالب:</label>
                    <select id="child-select" class="child-selector-dropdown" onchange="changeChild()">
                        <option value="salma">سلمى محمد - الصف السادس</option>
                        <option value="ahmed">أحمد محمد - الصف التاسع</option>
                        <option value="mahmoud" selected>محمود محمد - الصف الحادي عشر</option>
                    </select>
                </div>
            </div>

            <!-- Assignments Summary -->
            <div class="performance-grid">
                <div class="performance-card">
                    <div class="performance-icon good">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                    </div>
                    <div class="performance-value">5</div>
                    <div class="performance-label">واجبات حالية</div>
                </div>

                <div class="performance-card">
                    <div class="performance-icon excellent">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                    </div>
                    <div class="performance-value">18</div>
                    <div class="performance-label">واجبات مسلمة</div>
                </div>

                <div class="performance-card">
                    <div class="performance-icon needs-improvement">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="15" y1="9" x2="9" y2="15"></line>
                            <line x1="9" y1="9" x2="15" y2="15"></line>
                        </svg>
                    </div>
                    <div class="performance-value">2</div>
                    <div class="performance-label">واجبات متأخرة</div>
                </div>
            </div>

            <!-- Current Assignments -->
            <h2 class="section-title">الواجبات الحالية</h2>
            <div class="data-table-wrapper">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>المادة</th>
                            <th>عنوان الواجب</th>
                            <th>تاريخ التسليم</th>
                            <th>الحالة</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>الرياضيات</td>
                            <td>حل تمارين الفصل الخامس</td>
                            <td>2026-01-20</td>
                            <td><span class="status-badge late">لم يسلم بعد</span></td>
                        </tr>
                        <tr>
                            <td>الفيزياء</td>
                            <td>تقرير عن الموجات الكهرومغناطيسية</td>
                            <td>2026-01-22</td>
                            <td><span class="status-badge late">لم يسلم بعد</span></td>
                        </tr>
                        <tr>
                            <td>اللغة العربية</td>
                            <td>تحليل قصيدة</td>
                            <td>2026-01-18</td>
                            <td><span class="status-badge present">تم التسليم</span></td>
                        </tr>
                        <tr>
                            <td>الكيمياء</td>
                            <td>أسئلة المراجعة</td>
                            <td>2026-01-19</td>
                            <td><span class="status-badge late">لم يسلم بعد</span></td>
                        </tr>
                        <tr>
                            <td>اللغة الإنجليزية</td>
                            <td>Essay Writing</td>
                            <td>2026-01-21</td>
                            <td><span class="status-badge present">تم التسليم</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <script src="~/js/Parent/parent_script.js"></script>
    <script>
        function changeChild() {
            const selectedChild = document.getElementById('child-select').value;
            localStorage.setItem('selectedChild', selectedChild);
            location.reload();
        }

        document.addEventListener('DOMContentLoaded', function () {
            const savedChild = localStorage.getItem('selectedChild');
            if (savedChild) {
                document.getElementById('child-select').value = savedChild;
            }
        });
    </script>
</body>

</html>