@using SchoolManagementSystem.ViewModel
@model LoginViewModel
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول - مدارس الأوائل الأهلية</title>
    <meta name="description" content="تسجيل الدخول إلى نظام مدارس الأوابد الأهلية">
    <!-- fonts and icons used -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/Main/login.css")">
</head>

<body>
    <!-- Background -->
    <div class="background"></div>
    <div class="overlay"></div>

    <!-- Floating Shapes -->
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <!-- Login Container -->
    <div class="login-container">
        <!-- Logo Section -->
        <div class="logo-section">
            <img src="@Url.Content("~/images/logo.png")" alt="School Logo" class="school-logo">
            <h1 class="school-name">مدارس الأوائل الأهلية</h1>
            <p class="school-subtitle">AL-AWAEL SCHOOLS</p>
        </div>

        <!-- Login Card -->
        <div class="login-card">
            <h2 class="login-title">تسجيل الدخول</h2>
            <div asp-validation-summary="ModelOnly"
                 class="alert alert-danger"
                 id="loginError"
                 role="alert">
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Login Form -->
            <form id="loginForm" method="post" asp-action="Login" asp-controller="Account">
               
                <!-- User Role -->
                <div class="form-group" id="userTypeGroup">
                    <label for="userType" class="form-label">الدور الوظيفي</label>
                    <div class="input-wrapper">
                        <i class="fas fa-briefcase input-icon"></i>
                        <select asp-for="UserType" 
                                class="form-input" 
                                id="userType"
                                asp-validation-class="input-validation-error">
                            <option value="">-- اختر الدور الوظيفي --</option>
                            <option value="1">طالب</option>
                            <option value="2">معلم</option>
                            <option value="3">ولي أمر</option>
                            
                            <option value="5">مشرف</option>
                            <option value="6">مدير المدرسة</option>
                            <option value="4">الادمن</option>
                        </select>
                    </div>
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>

                <!-- Username -->
                <div class="form-group" id="usernameGroup">
                    <label for="username" class="form-label">اسم المستخدم</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="SSN" 
                               id="username" 
                               class="form-input" 
                               placeholder="أدخل اسم المستخدم"
                               asp-validation-class="input-validation-error">
                    </div>
                    <span asp-validation-for="SSN" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group" id="passwordGroup">
                    <label class="form-label" for="password">كلمة المرور</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" 
                               id="password" 
                               class="form-input" 
                               placeholder="أدخل كلمة المرور"
                               asp-validation-class="input-validation-error">
                        <i class="fas fa-eye-slash toggle-password" id="togglePassword"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Options -->
                <div class="form-options">
                    <div class="remember-me">
                        <input type="checkbox" id="remember">
                        <label for="remember">تذكرني</label>
                    </div>
                    <a asp-controller="Home" asp-action="ForgotPassword" class="forgot-password">نسيت كلمة المرور؟</a>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Submit -->
                <button type="submit" class="submit-btn">
                    <span>دخول</span>
                    <i class="fas fa-arrow-left"></i>
                </button>

                <!-- Back Link -->
                <div class="back-link">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fas fa-arrow-right"></i>
                        العودة للصفحة الرئيسية
                    </a>
                </div>
            </form>
        </div>
    </div>
    <script src="@Url.Content("~/js/Main/main.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>
