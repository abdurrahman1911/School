@using SchoolManagementSystem.ViewModel
@model LoginViewModel
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول - مدارس الأوائل الأهلية</title>
    <meta name="description" content="تسجيل الدخول إلى نظام مدارس الأوابد الأهلية">
    <!-- fonts and icons used -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="assets/CSS/main_styles.css">
</head>

<body>
    <!-- Background -->
    <div class="background"></div>
    <div class="overlay"></div>

    <!-- Floating Shapes -->
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <!-- Login Container -->
    <div class="login-container">
        <!-- Logo Section -->
        <div class="logo-section">
            <img src="assets/imgs/logo.png" alt="School Logo" class="school-logo">
            <h1 class="school-name">مدارس الأوائل الأهلية</h1>
            <p class="school-subtitle">AL-AWAEL SCHOOLS</p>
        </div>

        <!-- Login Card -->
        <div class="login-card">
            <h2 class="login-title">تسجيل الدخول</h2>

            <!-- Login Form -->
            <form id="loginForm" asp-action="Login" asp-controller="Login">
                <!-- Username -->
                <div class="form-group">
                    <label for="username" class="form-label">اسم المستخدم</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input type="text" name="Email" class="form-input" id="username" placeholder="أدخل اسم المستخدم" required>
                    </div>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label class="form-label" for="Password">كلمة المرور</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input type="password" name="password" class="form-input" id="password" placeholder="أدخل كلمة المرور" required>
                        <i class="fas fa-eye-slash toggle-password" id="togglePassword"></i>
                    </div>
                </div>

                <!-- Options -->
                <div class="form-options">
                    <div class="remember-me">
                        <input type="checkbox" id="remember">
                        <label for="remember">تذكرني</label>
                    </div>
                    <a href="forgot_password.html" class="forgot-password">نسيت كلمة المرور؟</a>
                </div>

                <!-- Submit -->
                <button type="submit" class="submit-btn">
                    <span>دخول</span>
                    <i class="fas fa-arrow-left"></i>
                </button>

                <!-- Back Link -->
                <div class="back-link">
                    <a href="about.html">
                        <i class="fas fa-arrow-right"></i>
                        العودة للصفحة الرئيسية
                    </a>
                </div>
            </form>
        </div>
    </div>
    <script src="assets/JS/main.js"></script>
</body>

</html>
